<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/field_00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/field_01"
        android:layout_width="0dp"
        android:layout_height="@dimen/field_height"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"
        android:background="@color/backgroundColor"/>

    <TextView
        android:id="@+id/field_01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/field_00"
        app:layout_constraintEnd_toStartOf="@id/field_02"
        android:layout_width="0dp"
        android:layout_height="@dimen/field_height"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"
        android:background="@color/backgroundColor"/>

    <TextView
        android:id="@+id/field_02"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/field_01"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/field_height"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"
        android:background="@color/backgroundColor"/>

<!--    2nd row -->
    <TextView
        android:id="@+id/field_10"
        app:layout_constraintTop_toBottomOf="@id/field_00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/field_11"
        android:layout_width="0dp"
        android:layout_height="@dimen/field_height"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"
        android:background="@color/backgroundColor"/>

    <TextView
        android:id="@+id/field_11"
        app:layout_constraintTop_toBottomOf="@id/field_01"
        app:layout_constraintStart_toEndOf="@id/field_10"
        app:layout_constraintEnd_toStartOf="@id/field_12"
        android:layout_width="0dp"
        android:layout_height="@dimen/field_height"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"
        android:background="@color/backgroundColor"/>

    <TextView
        android:id="@+id/field_12"
        app:layout_constraintTop_toBottomOf="@id/field_00"
        app:layout_constraintStart_toEndOf="@id/field_11"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/field_height"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"
        android:background="@color/backgroundColor"/>

    <TextView
        android:id="@+id/field_20"
        app:layout_constraintTop_toBottomOf="@id/field_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/field_21"
        android:layout_width="0dp"
        android:layout_height="@dimen/field_height"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"
        android:background="@color/backgroundColor"/>

    <TextView
        android:id="@+id/field_21"
        app:layout_constraintTop_toBottomOf="@id/field_10"
        app:layout_constraintStart_toEndOf="@id/field_20"
        app:layout_constraintEnd_toStartOf="@id/field_22"
        android:layout_width="0dp"
        android:layout_height="@dimen/field_height"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"
        android:background="@color/backgroundColor"/>

    <TextView
        android:id="@+id/field_22"
        app:layout_constraintTop_toBottomOf="@id/field_10"
        app:layout_constraintStart_toEndOf="@id/field_21"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/field_height"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"
        android:background="@color/backgroundColor"/>


    <Button
        android:id="@+id/reset_button"
        app:layout_constraintTop_toBottomOf="@id/field_21"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/buttonColor"
        android:text="Reset"/>

</androidx.constraintlayout.widget.ConstraintLayout>